export component PrimaryButton inherits Rectangle {
    in property <string> text: "Button";
    in property <brush> fill: @linear-gradient(90deg, #4a4a4a, #676767);
    in property <color> text-color: #f5f5f5;
    in property <length> corner-radius: 26px;
    in property <length> button-height: 52px;
    callback callback-clicked;

    width: 100%;
    height: button-height;
    border-radius: corner-radius;
    background: fill;

    overlay := Rectangle {
        width: parent.width;
        height: parent.height;
        border-radius: parent.border-radius;
        background: #ffffff;
        opacity: touch.pressed ? 0.25 : 0.0;
        animate opacity { duration: 120ms; }
    }

    Text {
        text: root.text;
        color: root.text-color;
        font-weight: 600;
        font-size: 18px;
        horizontal-alignment: center;
        vertical-alignment: center;
    }

    touch := TouchArea {
        width: parent.width;
        height: parent.height;
        clicked => { root.callback-clicked(); }
    }
}
